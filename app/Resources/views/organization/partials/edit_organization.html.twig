<div class="panel panel-warning">
    <div class="panel-heading">
        <h1 class="">Edit {{ organization.name }}</h1>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3 col-lg-3 " align="center">
                <img alt="Company logo" src="/assets/img/company.png" class="img-circle img-responsive">
            </div>
            <div class=" col-md-9 col-lg-9 ">
                <table class="table table-company-information">
                    <tbody>
                    <tr>
                        <th>{{ form_label(edit_form.number) }}</th>
                        <td>{{ form_widget(edit_form.number) }}</td>
                    </tr>
                    <tr>
                        <th>{{ form_label(edit_form.name, null, {'label_attr': {'class': 'column'}}) }}</th>
                        <td>{{ form_widget(edit_form.name, { 'attr': {'class': 'column'} }) }}</td>
                    </tr>
                    <tr>
                        <th>{{ form_label(edit_form.registrationDate, null, {'label_attr': {'class': 'column'}}) }}</th>
                        <td>{{ form_widget(edit_form.registrationDate, { 'attr': {'class': 'column'} }) }}</td>
                    </tr>

                    <tr>
                    <tr>
                        <th>{{ form_label(edit_form.type, null, {'label_attr': {'class': 'column'}}) }}</th>
                        <td>{{ form_widget(edit_form.type, { 'attr': {'class': 'column'} }) }}</td>
                    </tr>
                    <tr>
                        <th>{{ form_label(edit_form.numEmployees, null, {'label_attr': {'class': 'column'}}) }}</th>
                        <td>{{ form_widget(edit_form.numEmployees, { 'attr': {'class': 'column'} }) }}</td>
                    </tr>
                    <tr>
                        <th> </th>
                        <td>
                            {{ form_widget(edit_form.bankrupt) }}
                            {{ edit_form.vars.form.children.bankrupt.vars.name }}
                        </td>
                    </tr>
                    <tr>
                        <th> </th>
                        <td>
                            {{ form_widget(edit_form.liquidation) }}
                            {{ edit_form.vars.form.children.liquidation.vars.name }}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="panel-footer clearfix">
        <div class="pull-right">
            <input class="btn btn-warning" type="submit" name="submit" value="Save changes">
        </div>
    </div>
</div>
