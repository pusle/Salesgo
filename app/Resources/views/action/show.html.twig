{% extends 'base.html.twig' %}

{% block body %}
    <h1>Action</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ action.id }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ action.notes }}</td>
            </tr>
            <tr>
                <th>Startedat</th>
                <td>{% if action.startedAt %}{{ action.startedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Done</th>
                <td>{% if action.done %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Doneat</th>
                <td>{% if action.doneAt %}{{ action.doneAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('action_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('action_edit', { 'id': action.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
